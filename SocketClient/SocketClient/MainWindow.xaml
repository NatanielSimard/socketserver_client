<Window x:Class="SocketClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SocketClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock x:Name="chat" Height="400px"></TextBlock>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="textbox" Width="500px"></TextBox>
                <Button Width="50px" Click="Button_Click">send</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
